<?xml version="1.0"?>
<launch>
  <include file="$(find vehicle_platform)/launch/platform.launch">
    <arg name="use_lidar_front" value="false" />
    <arg name="use_lidar_center" value="true" />
    <arg name="use_diagnostics" value="false" />
    <arg name="use_camera_fl" value="true" />
    <arg name="use_camera_fr" value="true" />
    <arg name="use_tf" value="true" />
  </include>

  <include file="$(find vehicle_platform)/launch/nvidia_cameras.launch">
    <arg name="rectify" value="true" />
  </include>

  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find vehicle_platform)/config/camera_calibration.rviz" required="true" />
</launch>
